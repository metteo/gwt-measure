<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.1.1//EN"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.1.1/distro-source/core/src/gwt-module.dtd">
<module>

    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.json.JSON"/>

    <source path="client"/>
    <source path="shared"/>

    <entry-point class="com.googlecode.gwtmeasure.client.GWTMeasureEntryPoint"/>

    <!-- Deferred Binding -->
    <define-property name="gwtmeasure.instrumentation" values="ENABLED, DISABLED"/>
    <define-property name="gwtmeasure.channel.debugpanel" values="ENABLED, DISABLED"/>
    <define-property name="gwtmeasure.channel.remote" values="ENABLED, DISABLED"/>

    <set-property name="gwtmeasure.instrumentation" value="ENABLED"/>
    <set-property name="gwtmeasure.channel.debugpanel" value="DISABLED"/>
    <set-property name="gwtmeasure.channel.remote" value="ENABLED"/>

    <!-- Measurement Hub -->
    <replace-with class="com.googlecode.gwtmeasure.client.internal.MeasurementHubImpl">
        <when-property-is name="gwtmeasure.instrumentation" value="ENABLED"/>
        <when-type-assignable class="com.googlecode.gwtmeasure.client.spi.MeasurementHub"/>
    </replace-with>

    <replace-with class="com.googlecode.gwtmeasure.client.internal.VoidHub">
        <when-property-is name="gwtmeasure.instrumentation" value="DISABLED"/>
        <when-type-assignable class="com.googlecode.gwtmeasure.client.spi.MeasurementHub"/>
    </replace-with>

    <!-- RPC Hooks -->
    <generate-with class="com.googlecode.gwtmeasure.rebind.MeasuringProxyGenerator">
        <when-property-is name="gwtmeasure.instrumentation" value="ENABLED"/>
        <when-type-assignable class="com.google.gwt.user.client.rpc.RemoteService"/>
    </generate-with>

    <!-- Debug Panel -->   
    <replace-with class="com.googlecode.gwtmeasure.client.internal.VoidEventHandler">
        <when-property-is name="gwtmeasure.channel.debugpanel" value="DISABLED"/>
        <when-type-assignable class="com.googlecode.gwtmeasure.client.delivery.DebugPanelChannel"/>
    </replace-with>

    <!-- Remote Delivery -->
    <replace-with class="com.googlecode.gwtmeasure.client.internal.VoidEventHandler">
        <when-property-is name="gwtmeasure.channel.remote" value="DISABLED"/>
        <when-type-assignable class="com.googlecode.gwtmeasure.client.delivery.RemoteServerChannel"/>
    </replace-with>

</module>